{
  "name": "@jakzo/aoc",
  "description": "CLI for reading, running and submitting Advent of Code challenges.",
  "version": "0.3.1",
  "main": "dist/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "aoc": "dist/bin.js"
  },
  "pkg": {
    "assets": "templates/**/*"
  },
  "lint-staged": {
    "*": "prettier -c -w",
    "*.{ts,tsx}": "eslint --cache --fix"
  },
  "scripts": {
    "build": "tsc -P ./tsconfig.build.json",
    "build:clean": "rimraf \"./dist\" *.tsbuildinfo",
    "build:binary": "pkg -c package.json -t node12-linux-x64,node12-macos-x64,node12-win-x64 -o dist-bin/aoc ./dist/bin.js",
    "dev": "ts-node -T ./src/bin.ts",
    "test": "tsc --noEmit && eslint . --cache --ext .ts,js",
    "format": "prettier . -c -w",
    "release": "yarn build:clean && yarn build && changeset publish",
    "postinstall": "is-ci || husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "lint": "eslint . --cache --fix --ext .ts,js"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.3",
    "chokidar": "^3.4.3",
    "cli-html": "jakzo/cli-html",
    "date-fns": "^2.16.1",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "keytar": "^7.3.0",
    "tempy": "^1.0.0",
    "yargs": "^16.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.12.0",
    "@changesets/get-release-plan": "^2.0.1",
    "@changesets/release-utils": "^0.1.0",
    "@jakzo/pkg": "^4.4.9",
    "@types/cheerio": "^0.22.22",
    "@types/fs-extra": "^9.0.4",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.10",
    "@types/yargs": "^15.0.11",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^5.0.6",
    "is-ci": "^2.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "pinst": "^2.1.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  }
}
